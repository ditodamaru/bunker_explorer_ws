<launch>

<arg name="map_file" default="$(find bunker_explorer_navigation)/maps/wrhouse_082023_2139.yaml"/>

<!-- Map server -->
<node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find bunker_explorer_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" /> 
    <rosparam file="$(find bunker_explorer_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find bunker_explorer_navigation)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find bunker_explorer_navigation)/config/global_costmap_params.yaml" command="load" /> 
    <rosparam file="$(find bunker_explorer_navigation)/config/base_local_planner_params.yaml" command="load" />
    <remap from="/cmd_vel" to="/smoother_cmd_vel"/>
</node>

</launch> 