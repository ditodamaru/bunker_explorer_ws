<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <!-- <arg name="node_name" default="gps0"/> -->
  <arg name="node_name" default="ublox_gps"/>
  <!-- <arg name="param_file_name" doc="name of param file, e.g. rover" /> -->
  <arg name="param_file_name" value="zed-f9p" />
  <arg name="output" default="screen" />
  <arg name="respawn" default="true" />
  <arg name="respawn_delay" default="30" />
  <arg name="clear_params" default="false" />

  <node pkg="ublox_gps" type="ublox_gps" name="$(arg node_name)"
        output="$(arg output)" 
        clear_params="$(arg clear_params)"
        respawn="$(arg respawn)" 
        respawn_delay="$(arg respawn_delay)">
    <rosparam command="load" 
              file="$(find ublox_gps)/config/$(arg param_file_name).yaml" />
  </node>

  <!-- <node pkg="tf" type="static_transform_publisher" name="gps_broadcaster" args="-0.3 0 0.35 0 0 0 1 robot_base gps 100" /> -->
  <node pkg="tf" type="static_transform_publisher" name="gps_broadcaster" args="-0.3 0 0.75 0 0 0 1 base_footprint gps 100" />

</launch>


